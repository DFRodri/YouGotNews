<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseMatchAndWrapStyle"
    android:background="@drawable/list_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/defaultMarginPadding">

    <TextView
        android:id="@+id/date"
        style="@style/BaseMatchStyle"
        android:lines="1"
        android:gravity="start"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/title"
        style="@style/BaseWrapStyle"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/thumbnail"
        style="@style/BaseMatchAndWrapStyle"
        android:scaleType="fitXY"
        tools:background="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription" />

    <!--<View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/defaultMarginPadding"
        android:background="@color/divider" />-->

    <TextView
        android:id="@+id/summary"
        style="@style/BaseWrapStyle"
        android:lines="2"
        android:paddingBottom="@dimen/defaultMarginPadding"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/author"
        style="@style/BaseMatchStyle"
        android:gravity="end"
        android:lines="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="italic|bold"
        tools:text="By Media Paul" />

</LinearLayout>